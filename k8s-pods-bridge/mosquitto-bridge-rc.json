{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "mosquitto",
    "labels": {
      "name": "mosquitto",
      "server-id": "1"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "app": "mosquitto"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "mosquitto"
        }
      },
      "spec":{
        "containers": [
          {
            "name": "server",
            "image": "kairen/mosquitto-pod-bridge",
            "env":[
              { "name": "K8S_API_SERVER_IP", "value": "localhost" },
              { "name": "K8S_API_SERVER_PORT", "value": "localhost" },
              {
                "name": "POD_METADATA_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              }
            ],
            "ports":[
              {
                "containerPort": 1883
              }
            ]
          }
        ]
      }
    }
  }
}
